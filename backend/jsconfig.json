{
  "compilerOptions": {
    "baseUrl": "./", // Set the base URL to the current directory
    "paths": {
      "../models/*": ["models/*"], // Alias for models folder
      "../controllers/*": ["controllers/*"], // Alias for controllers folder
      "../routes/*": ["routes/*"], // Alias for routes folder
      "../utils/*": ["utils/*"] // Alias for utils folder
    }
  },
  "exclude": [
    "node_modules", // Exclude the node_modules folder
    "dist", // Exclude the dist folder if using a build process
    "coverage" // Exclude coverage reports if using a testing tool
  ]
}
